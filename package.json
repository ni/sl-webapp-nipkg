{
  "name": "angular-nipkg-builder",
  "version": "1.0.1",
  "description": "Build tool for packaging Angular applications into .nipkg format",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ng-nipkg": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "prepublishOnly": "npm run build && npm run test:ci"
  },
  "keywords": [
    "angular",
    "nipkg",
    "national-instruments",
    "packaging"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ]
}
