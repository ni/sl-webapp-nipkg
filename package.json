{
  "name": "@ni/angular-nipkg-builder",
  "version": "2.1.0",
  "description": "Build tool for packaging Angular applications into .nipkg format",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ng-nipkg": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "prepublishOnly": "npm run build && npm run test:ci"
  },
  "keywords": [
    "angular",
    "nipkg",
    "national-instruments",
    "packaging"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ni/angular-nipkg-builder.git"
  },
  "author": {
    "name": "National Instruments"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ni/angular-nipkg-builder/issues"
  },
  "homepage": "https://github.com/ni/angular-nipkg-builder#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.3",
    "tar": "^7.5.7"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ]
}
